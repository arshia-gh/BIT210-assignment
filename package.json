{
  "main": "src/index.js",
  "name": "bit210-assignment",
  "version": "1.0.0",
  "type": "module",
  "description": "HELP University BIT210 assignment",
  "contributors": [
    {
      "name": "Tee Soon Ren",
      "url": "https://github.com/ClintonTSR"
    }
  ],
  "scripts": {
    "precommit": "npx lint-staged",
    "prepare": "npx husky install",
    "dev:watch:js": "watchify src/index.js -v -t [ babelify --presets [ @babel/preset-env ] ] -d | exorcist public/bundle.js.map > public/bundle.js",
    "dev": "browserify src/index.js -t [ babelify --presets [ @babel/preset-env ] ] -d | exorcist public/bundle.js.map > public/bundle.js",
    "build:js": "browserify src/index.js -t [ babelify --presets [ @babel/preset-env ] ] | uglifyjs -cm > public/bundle.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arshia-gh/bit210-assignment"
  },
  "author": "Arshia Gholami",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/preset-env": "^7.15.6",
    "@popperjs/core": "^2.10.1",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.13.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "exorcist": "^2.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "uglify-js": "^3.14.2",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "bootstrap": "^5.1.1",
    "bootstrap-icons": "^1.5.0",
    "cookies-js": "^1.2.3"
  },
  "lint-staged": {
    "**/*.js": "npx eslint --fix",
    "**/*.{js, jsm, json, html, css}": "npx prettier --write"
  },
  "husky": {
    "hooks": {
      "prepare": "npx husky install",
      "precommit": [
        "npm run build:js",
        "npm run precommits"
      ]
    }
  }
}
